<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:sec="http://www.springframework.org/schema/security"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://www.springframework.org/schema/mvc
		http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.2.xsd">
		
	<sec:http pattern="/css/**" security="none" />
	<sec:http pattern="/fonts/**" security="none" />
	<sec:http pattern="/images/**" security="none" />
	<sec:http pattern="/js/**" security="none" />	
	<sec:http pattern="/favicon.ico" security="none" />	
	<sec:http pattern="/robots.txt" security="none" />
	
	<sec:http>
		<sec:session-management session-fixation-protection="none" />

		<sec:anonymous username="roleAnonymous" />
		
		<sec:custom-filter ref="preSecurityFilterChain" before="CHANNEL_FILTER"/>
		<sec:custom-filter ref="postSecurityFilterChain" after="SWITCH_USER_FILTER"/>
		
		<sec:form-login />
  		<sec:logout />
	</sec:http>
	
	<sec:authentication-manager>
	</sec:authentication-manager>
</beans>