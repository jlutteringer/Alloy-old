<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:sec="http://www.springframework.org/schema/security"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://www.springframework.org/schema/mvc
		http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.2.xsd">
		
	<context:component-scan base-package="org.vault.security.managed"/>
	
	<sec:authentication-manager>
		<sec:authentication-provider user-service-ref="vaultUserDetailsService">
			<sec:password-encoder ref="vaultPasswordEncoder" />
		</sec:authentication-provider>
	</sec:authentication-manager>
	
	<bean id="vaultPasswordEncoder" class="org.springframework.security.authentication.encoding.PlaintextPasswordEncoder"/>
</beans>